<Page x:Class="Project.View.News"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.View"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="800"
      Title="News">

    <Grid Background="#393E46">
        <Image Source="/Project;component/118-1182519_boeing-767-png-clipart.png" Stretch="Fill" Margin="452,61,0,71"/>
        <TextBlock Text="{Binding NewsName}" FontSize="20" Foreground="#EEEEEE" Margin="10,43,363,259" TextWrapping="Wrap"></TextBlock>
        <TextBlock Text="{Binding Content}" Foreground="#EEEEEE" Margin="10,106,363,100" TextWrapping="Wrap" FontFamily="Comic Sans MS">
        </TextBlock>
        <Label Content="{Binding Date}" Foreground="#EEEEEE" Opacity="0.4" FontSize="15" Margin="10,260,613,71"></Label>
    </Grid>
</Page>
